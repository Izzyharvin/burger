<h1>Burgers</h1>

<div id="wanttoeat">
  <h2>Burgers you want to eat!</h2>
</div>

<ul>
  {{#each burgers}}
  {{#unless eaten}}
  <li>
    {{../partials/burger/burger-block eaten=true}}
    {{this.id}}. {{this.name}}
  </li>
  {{/unless}}
  {{/each}}
</ul>

<div id="eatenburgers">
  <h2>Burgers you haven't eaten!</h2>
</div>

<ul>
  {{#each burgers}}
  {{#if eaten}}
  {{../partials/burger/burger-block eaten=false}}
  {{this.id}}. {{this.name}}
  {{/if}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <label for="name">Burger Name:</label>
    <input type="text" id="name" name="newburger">
    <label for="eaten">Eaten:</label><br>
    <select>
      <option value="1">Eaten</option>
      <option value="0">Not Eaten</option>
    </select>
  </div>

  <button type="submit" class="btn btn-default">Add Burger</button>
</form>